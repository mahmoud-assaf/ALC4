<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyProfile">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/profile"
            android:id="@+id/imageView" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Mahmoud Assaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:typeface="serif" android:textStyle="bold"
            android:textSize="18sp"/>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView2"
          android:layout_marginTop="8dp" android:background="@android:color/darker_gray"
          android:layout_marginEnd="32dp" android:layout_marginStart="32dp" android:id="@+id/view"></View>
    <TextView
            android:text="Track:    Android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view" app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_marginTop="16dp" android:textStyle="bold"/>
    <TextView
            android:text="Country:    Egypt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="16dp" android:textStyle="bold"/>
    <TextView
            android:text="Email:          Azolidine@gmail.com"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="16dp" android:textStyle="bold" android:linksClickable="true"
            android:autoLink="email" android:textColorLink="#6200EA"/>
    <TextView
            android:text="Pone number:   +2 0111 659 5512"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="16dp" android:textStyle="bold"/>
    <TextView
            android:text="slack username: @Mahmoud Assaf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="16dp" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>