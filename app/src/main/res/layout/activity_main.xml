<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="My Profile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonprofile" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:typeface="serif" android:background="@color/colorAccent"
            app:layout_constraintHorizontal_bias="0.502"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="About ALC"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonabout" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonprofile" android:typeface="serif" android:textStyle="bold"
            android:background="@color/colorAccent"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    <TextView
            android:text="Welcome to ALC 4.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" android:typeface="serif" android:textSize="18sp"
            android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>